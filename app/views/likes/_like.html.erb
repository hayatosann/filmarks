<% if user_signed_in? %>
  <% if product.like_user(current_user.id) %>
    <%= button_to product_like_path(product.id, Like.find_by(product_id: product.id, user_id: current_user.id)), method: :delete, id: "product-#{product.id}", remote: true do %>
      <i class="fa fa-plus-square "></i> 
      <span>
        <%= product.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to product_likes_path(product.id), id: "product-#{product.id}", method: :post, remote: true do %>
      <i class="fa fa-plus-square "></i> 
      <span>
        <%= product.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-plus-square "></i> 
    <span>
      <%= product.likes_count %>
    </span>
<% end %>